<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/results"
    android:gravity="center_vertical|center_horizontal"
>
     
	
    <LinearLayout
     	android:orientation="horizontal"
    	android:layout_height="wrap_content"
    	android:id="@+id/layoutResults"
    	android:layout_width="200px" 
    	android:layout_marginLeft="20px" android:layout_marginTop="135px">
	    <TextView  
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content" 
	    	android:text="@string/numbersOfCorrect"
	    	style="@style/defaultText"
	    	android:layout_weight="15"
	    />
	    <TextView  
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content" 
	    	android:id="@+id/txtCorrectNumbers"
	    	style="@style/defaultText"
	    	android:layout_weight="35"
	    />
	    <TextView  
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content" 
	    	android:text="@string/numbersOfWrong"
	    	style="@style/defaultText"
	    	android:layout_weight="15"
	    />
	    <TextView  
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content" 
	    	android:id="@+id/txtWrongNumbers"
	    	style="@style/defaultText"
	    	android:layout_weight="35"
	    />
    </LinearLayout>
	<ListView  
    	android:id="@+id/listWordsAnswer"
    	android:layout_below="@id/layoutResults"
    	android:cacheColorHint="#00FEE9D1"
    android:layout_width="225px" android:layout_marginTop="10px" android:layout_marginLeft="5px" android:layout_height="200px"/>
    
   
    <Button 
    	android:id="@+id/btnResultBack"
    	android:text="@string/resultsBack"
    	android:layout_alignParentBottom="true" 
    	style="@style/buttonText"
    	android:textColor="@drawable/default_btn"
		android:layout_width="180px" android:layout_height="40px" android:layout_marginBottom="10px" android:layout_marginLeft="30px"/>
</RelativeLayout>