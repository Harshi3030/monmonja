<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/speech_game"
    android:gravity="center_vertical|center_horizontal"
>
     
          
	<ListView  
    	android:id="@+id/listWordToSay"
    	android:layout_height="300px" 
    	android:layout_width="245px" 
    	android:layout_marginTop="73px"
    	style="@style/defaultText"
    	android:cacheColorHint="#FFFEE9D1"    	
    	android:smoothScrollbar="true"/>
    
    <Button 
    	android:id="@+id/btnStartSaying"
    	android:text="@string/startSayingWords"
    	android:layout_alignParentBottom="true" 
    	style="@style/buttonText"
		android:layout_marginLeft="35px" 
		android:textColor="@drawable/default_btn"
		android:layout_width="180px" android:layout_height="40px" android:layout_marginBottom="30px"/>
</RelativeLayout>
